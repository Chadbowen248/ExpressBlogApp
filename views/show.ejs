<% include ./partials/header %>
<div class="ui main text container segment">
    <h1> <%= blog.title %> </h1>
    <h6><%= blog.created.toDateString();%></h6>
    <img src="<%= blog.image %>">
    <div class="blogText">
        <%- blog.body %>
    </div>
    
    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <a href="/blogs/<%= blog._id %>/edit" class="ui red basic button small">Edit</a>
         <button class="ui violet basic button small">Delete</a>
    </form>
    
</div>

<% include ./partials/footer %>